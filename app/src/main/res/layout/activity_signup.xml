<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstrains">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:layout_gravity="center"
                android:text="Создайте аккаунт"
                android:textColor="@color/white"
                android:textSize="31dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="238dp"
                android:layout_height="53dp"
                android:layout_marginTop="181dp"
                android:layout_gravity="center"
                android:text="Зарегестрируйтесь"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="343dp"
                android:layout_height="75dp"
                android:layout_marginTop="39dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittextstyle2"
                android:paddingStart="36dp"
                android:ems="10"
                android:drawableStart="@drawable/person_white"
                android:drawablePadding="19dp"
                android:hint="Email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="343dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle2"
                android:paddingStart="36dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:ems="10"
                android:drawableStart="@drawable/key"
                android:drawablePadding="19dp"
                android:hint="Пароль"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <EditText
                android:id="@+id/editText2"
                android:layout_width="343dp"
                android:layout_height="75dp"
                android:paddingStart="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle2"
                android:ems="10"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:drawableStart="@drawable/key"
                android:drawablePadding="19dp"
                android:hint="Подтверждение пароля"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/button"-->
<!--                android:layout_width="175dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:backgroundTint="@color/button_color_white"-->
<!--                android:background="@drawable/button_page_signin"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:textColor="@color/purple"-->
<!--                android:onClick="toPatch"-->
<!--                android:text="Продолжить"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent" />-->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:onClick="back"
                android:text="Вернуться назад"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>